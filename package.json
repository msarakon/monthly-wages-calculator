{
    "name": "monthly-wage-calculator",
    "version": "0.1.0",
    "description": "Calculates monthly wages based on CSV input.",
    "author": "Minna Sarakontu",
    "repository": {
        "type": "git",
        "url": "https://github.com/msarakon/monthly-wages-calculator"
    },
    "license": "UNLICENSED",
    "dependencies": {
        "dayjs": "1.8.12",
        "react": "16.8.6",
        "react-dom": "16.8.6"
    },
    "devDependencies": {
        "@babel/core": "7.4.3",
        "@babel/preset-env": "7.4.3",
        "@babel/preset-react": "7.0.0",
        "babel-jest": "24.7.1",
        "babel-loader": "8.0.5",
        "css-loader": "2.1.1",
        "enzyme": "3.9.0",
        "enzyme-adapter-react-16": "1.12.1",
        "eslint": "5.16.0",
        "eslint-loader": "^2.1.2",
        "eslint-plugin-react": "7.12.4",
        "html-webpack-plugin": "3.2.0",
        "jest": "24.7.1",
        "style-loader": "0.23.1",
        "webpack": "4.29.6",
        "webpack-cli": "3.3.0"
    },
    "scripts": {
        "build": "webpack",
        "test": "jest"
    },
    "jest": {
        "setupFiles": [
            "./test/setup-tests.js"
        ],
        "moduleNameMapper": {
            "\\.(css)$": "<rootDir>/test/style-mock.js"
        }
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "corejs": "2",
                    "useBuiltIns": "entry"
                }
            ],
            "@babel/preset-react"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true
        },
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module"
        },
        "plugins": [
            "react"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended"
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "no-console": [
                "off"
            ]
        }
    }
}
